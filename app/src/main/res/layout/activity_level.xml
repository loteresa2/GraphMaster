<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:scrollbars="vertical"
xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".UI.LevelActivity">

    <com.daimajia.androidviewhover.BlurLayout
        android:id="@+id/level5"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@+id/source"
            android:id="@+id/level5Image"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/learn"
            android:layout_width="match_parent"
            android:layout_height="140dp" />
    </com.daimajia.androidviewhover.BlurLayout>

    <com.daimajia.androidviewhover.BlurLayout
        android:id="@+id/level1"
        android:layout_below="@+id/level5"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/levelImage1"
            android:scaleType="fitXY"
            android:src="@drawable/level1kids"
            android:layout_width="match_parent"
            android:layout_height="125dp" />
    </com.daimajia.androidviewhover.BlurLayout>

    <com.daimajia.androidviewhover.BlurLayout
        android:id="@+id/level2"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@+id/source"
            android:id="@+id/levelImage2"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/level2kids"
            android:layout_width="match_parent"
            android:layout_height="125dp" />
    </com.daimajia.androidviewhover.BlurLayout>

    <com.daimajia.androidviewhover.BlurLayout
        android:id="@+id/level3"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@+id/source"
            android:id="@+id/levelImage3"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/level3kids"
            android:layout_width="match_parent"
            android:layout_height="125dp" />
    </com.daimajia.androidviewhover.BlurLayout>

    <com.daimajia.androidviewhover.BlurLayout
        android:id="@+id/level4"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@+id/source"
            android:id="@+id/levelImage4"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/level4kids"
            android:layout_width="match_parent"
            android:layout_height="140dp" />
    </com.daimajia.androidviewhover.BlurLayout>

</RelativeLayout>
</ScrollView>